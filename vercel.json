{
  "version": 2,
  "builds": [
    { "src": "api/handler.js", "use": "@vercel/node" },
    { "src": "css/**", "use": "@vercel/static" },
    { "src": "js/**", "use": "@vercel/static" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/monster", "dest": "/api/handler.js" },
    { "src": "/api/monsters-batch", "dest": "/api/handler.js" },
    { "src": "/api/set-available-monsters", "dest": "/api/handler.js" },
    { "src": "/api/search/(.*)", "dest": "/api/handler.js" },
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "^/$", "dest": "/index.html" }
  ]
}